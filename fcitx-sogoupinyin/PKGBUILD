# Contributor: csslayer <wengxt[AT]gmail.com>
pkgname=fcitx-sogoupinyin
pkgver=0.0.1
pkgrel=1
pkgdesc="Fcitx wrapper for Sogou Pinyin,thinks to Sougou"
arch=('i686' 'x86_64')
url="http://code.google.com/p/fcitx"
license=('custom')
depends=('fcitx>=4.2.6' )
optdepends=('fcitx-skin-sogou: fcitx skin for SogouPinyin')
makedepends=('cmake' 'intltool')
source=("http://ubuntu-ppa.archlinuxcn.org/fcitx-team/nightly/ubuntu/pool/main/f/fcitx-sogoupinyin-release/fcitx-sogoupinyin-release_${pkgver}.orig.tar.gz")
#官方ppa源
#source=("http://ppa.launchpad.net/fcitx-team/nightly/ubuntu/pool/main/f/fcitx-sogoupinyin-release/fcitx-sogoupinyin-release_${pkgver}.orig.tar.gz")

if [ "${CARCH}" = "i686" ]; then
    _TAR_FILE=data.i386.tar.xz
    _LIB_DIR=i386-linux-gnu
else
    _TAR_FILE=data.amd64.tar.xz
    _LIB_DIR=x86_64-linux-gnu
fi

package(){
    cd fcitx-sogoupinyin-release-${pkgver}/arch
    pwd
    tar -xvf "${_TAR_FILE}" -C "${pkgdir}"
    cd "${pkgdir}"

    mv "usr/lib/${_LIB_DIR}/"* usr/lib
    rmdir "usr/lib/${_LIB_DIR}"
}

md5sums=('36ef6dff6446d936cb887dba0b24bb22')
